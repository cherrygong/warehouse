<%= form_for ([@brand, @product]) do |f| %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :stock %><br>
      <%= f.number_field :stock %>
    <p>

    <p>
      <%= f.submit %>
    </p>



<% end %>
