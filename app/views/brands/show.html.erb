<h3>Brand Name:
<%= link_to("#{@brand.brandname}", "/brands/#{@brand.id}/products")%></h3>

<%= image_tag @brand.image.url(:medium) %>

<h4><%= @brand.brandname %> has <%= @brand.products.count %> products</h4>

<%= render 'products/product' %>

<strong>Add new product to this brand</strong><br>

<%= form_for ([@brand, @brand.products.build]) do |f| %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :stock %><br>
      <%= f.text_field :stock %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>


<br>


<%= link_to 'Edit Brand', edit_brand_path(@brand) %> |
<%= link_to 'Home Page', brands_path %>
